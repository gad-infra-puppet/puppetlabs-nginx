  location <%= location %> {
<%- if maintenance -%>
    if ($maintenance) {
      return 503;
    }
<%- end -%>

<%- if @location_cfg_prepend -%>
  <%- location_cfg_prepend.sort.each do |key,value| -%>
    <%- if value.is_a?(Array) -%>
      <%- value.each do |v| -%>
    <%= key %> <%= v %>;
      <%- end -%>
    <%- else -%>
    <%= key %> <%= value %>;
    <%- end -%>
  <%- end -%>
<%- end -%>
    proxy_read_timeout <%= proxy_read_timeout %>;
    proxy_pass <%= proxy %>;
<%- if @location_cfg_append -%>
  <%- location_cfg_append.sort.each do |key,value| -%>
    <%- if value.is_a?(Array) -%>
      <%- value.each do |v| -%>
    <%= key %> <%= v %>;
      <%- end -%>
    <%- else -%>
    <%= key %> <%= value %>;
    <%- end -%>
  <%- end -%>
<%- end -%>
  }
